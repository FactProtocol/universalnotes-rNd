{
  "manifest_version": 3,
  "name": "UniversalNotes",
  "description": "Bringing Community Notes from Twitter to every website.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "UniversalNotes",
    "default_icon": "icon128.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
